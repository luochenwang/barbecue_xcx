.sidebar {
  position: fixed;
  left: -1rpx;
  bottom: 30rpx;
  z-index: 10;
}
.sidebar .icon-consult:before {
    content: '';
    width: 50rpx;
    height: 50rpx;
    display: block;
    background: url(https://campaign5.method-ad.cn/hypertherm/img/sidebar1.png) no-repeat 0 0/100% auto;
    margin-right: 5rpx;
}
.sidebar .icon-back:before {
    content: '';
    width: 50rpx;
    height: 50rpx;
    display: block;
    background: url(https://campaign5.method-ad.cn/hypertherm/img/sidebar2.png) no-repeat 0 0/100% auto;
    margin-right: 5rpx;
}
.sidebar .item {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    text-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    width: 165rpx;
    line-height: 70rpx;
    border-top-right-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    border: 1rpx solid #ca8989;
    background-color: rgba(255, 255, 255, 0.5);
    font-size: 22rpx;
    color: #ca8989;
    margin-bottom: 20rpx;
}

.full-screen-float {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}
.full-screen-float video {
    width: 100%;
    height: 100%;
    background-color: #000;
}
.full-screen-float .close {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 50rpx;
    height: 50rpx;
}

