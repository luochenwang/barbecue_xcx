.full-screen-float {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}
.full-screen-float video {
    width: 100%;
    height: 100%;
    background-color: #000;
}
.full-screen-float .close {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 50rpx;
    height: 50rpx;
}

