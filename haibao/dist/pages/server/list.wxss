.container {
  padding: 20rpx 0;
}
.search-box {
  width: 700rpx;
  height: 50rpx;
  margin: 55rpx auto;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  position: relative;
  background: #eaeaea;
  border-radius: 50rpx;
  overflow: hidden;
}
.search-box input {
    font-size: 20rpx;
    width: 100%;
    height: 100%;
    padding-left: 20rpx;
    padding-right: 170rpx;
    color: #ed1b2e;
}
.search-box .search-btn {
    position: absolute;
    right: 0;
    top: 0;
    line-height: 50rpx;
    height: 50rpx;
    width: 156rpx;
    text-align: center;
    font-size: 20rpx;
    border-radius: 50rpx;
    background: #ed1b2e;
    color: #fff;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
}
.search-box .search-btn:before {
      content: '';
      width: 29rpx;
      height: 29rpx;
      display: block;
      background: url(https://campaign5.method-ad.cn/hypertherm/img/icon_search.png) no-repeat 0 0/100% auto;
      margin-right: 10rpx;
}
.list {
  padding: 0 24rpx;
}
.list .item {
    padding: 10rpx;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    background: #eaeaea;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    position: relative;
}
.list .item:after {
      content: '';
      position: absolute;
      top: 50%;
      right: 20rpx;
      width: 29rpx;
      height: 29rpx;
      margin-top: -14.5rpx;
      background: url(https://campaign5.method-ad.cn/hypertherm/img/course/icon_to2.png) no-repeat 0 0/100% auto;
}
.list .item .item-l {
      width: 280rpx;
      max-height: 200rpx;
}
.list .item .item-l image {
        width: 100%;
        height: 100%;
}
.list .item .item-r {
      width: 350rpx;
      padding-left: 70rpx;
}
.list .item .item-r .name {
        font-size: 27rpx;
        color: #696969;
        font-weight: bold;
}

