.user-info {
  height: 400rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  background-color: #999999;
  margin-bottom: 60rpx;
}
.user-info .headimg {
    width: 190rpx;
    height: 190rpx;
    border: 10rpx solid #cccccc;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 20rpx;
}
.user-info .headimg image {
      width: 100%;
      height: 100%;
}
.user-info .name {
    font-size: 25.5rpx;
    color: #fff;
    background-color: #eb1b2e;
    line-height: 60rpx;
    padding: 0 20rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}
.user-info .time {
    font-size: 30rpx;
    color: #fff;
    text-align: center;
}
.nav {
  padding: 0 24rpx;
}
.nav .item {
    line-height: 140rpx;
    margin-bottom: 35rpx;
    padding-left: 115rpx;
    font-size: 35rpx;
    color: #ed1b2e;
    position: relative;
    background: #eaeaea;
    border-radius: 20rpx;
}
.nav .item:before {
      content: "";
      position: absolute;
      top: 50%;
      right: 25rpx;
      width: 29rpx;
      height: 29rpx;
      margin-top: -14.5rpx;
      background: url(https://campaign5.method-ad.cn/hypertherm/img/course/icon_to3.png) no-repeat 0 0/100% auto;
}
.nav .item:after {
      content: "";
      position: absolute;
      top: 50%;
      left: 25rpx;
      width: 70rpx;
      height: 70rpx;
      margin-top: -35rpx;
}
.nav .icon-center1:after {
    background: url(https://campaign5.method-ad.cn/hypertherm/img/course/icon_center1.png) no-repeat 0 0/100% auto;
}
.nav .icon-center2:after {
    background: url(https://campaign5.method-ad.cn/hypertherm/img/course/icon_center2.png) no-repeat 0 0/100% auto;
}

